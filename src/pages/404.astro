---
import BaseLayout from '../layouts/BaseLayout.astro';
---

<BaseLayout title="404 | 唐靖凯" description="页面不存在">
  <section class="section glass" style="max-width: 980px;">
    <h1 class="post-title" style="margin-top: 0;">404</h1>
    <p class="post-meta">这个页面不存在，可能是链接过期了。</p>

    <div class="post-content">
      <div style="display:flex; gap: 10px; flex-wrap: wrap; margin: 12px 0 18px;">
        <a class="primary" href="/search">去搜索</a>
        <a class="ghost" href="/writing">文章列表</a>
        <button id="go-back" class="ghost" type="button">返回上一页</button>
      </div>

      <ul>
        <li><a href="/">回到首页</a></li>
        <li><a href="/writing">文章列表</a></li>
        <li><a href="/now">Now</a></li>
        <li><a href="/tags">Tags</a></li>
      </ul>
    </div>
  </section>

  <script is:inline>
    const btn = document.getElementById('go-back');
    if (btn) {
      btn.addEventListener('click', () => {
        if (history.length > 1) history.back();
        else location.href = '/';
      });
    }
  </script>
</BaseLayout>
